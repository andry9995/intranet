{% extends '@App/index/base-menu-intranet.html.twig' %}

{% block title %} {{ parent() }} | Agenda {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/fullcalendar/fullcalendar.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/revision/css/revision.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/colorpicker/bootstrap-colorpicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/colorpicker/bootstrap-colorpicker.min.js') }}"></script>
    <script src="{{ asset('js/plugins/fullcalendar/fullcalendar.min.js') }}"></script>
    <script src="{{ asset('js/plugins/fullcalendar/gcal.min.js') }}"></script>
    <script src="{{ asset('js/plugins/fullcalendar/locale/fr.js') }}"></script>
    <script src="{{ asset('bundles/revision/js/agenda3/client_color.js') }}"></script>
    <script src="{{ asset('bundles/revision/js/agenda3/filtre.js') }}"></script>
    <script src="{{ asset('bundles/revision/js/agenda3/index.js') }}"></script>
    <script type="text/javascript">
        var assetsBaseDir = "{{ asset('img/') }}";
    </script>>
{% endblock %}

{% block content %}
    <div class="white-bg" style="padding: 20px 10px 10px;position: relative;">
        <div id="test_calendar"></div>


        <div id="loader" style="padding-top: 5px;"></div>
        <div id="calendar" class="white-bg" style="margin-right: 30px;"></div>

        <div id="config-container" class="theme-config" style="right: -60px;">
            <div class="theme-config-box">
                <div id="config-handle-icon" class="spin-icon">
                    <i class="fa fa-arrow-left"></i>
                </div>
                <div class="skin-setttings">
                    <div class="title">Liste Agenda</div>
                    <div style="height: 500px;overflow-y: auto;" id="id_client_sel">
                        {% for client in clients %}
                            <div class="agenda-select-item">
                                <a id="id_bg_{{ client.id }}" data-bg="{{ client.tacheColor ? client.tacheColor : tacheColorDefault }}" class="label pull-left colorpicker-element" href="#">&nbsp;</a>&nbsp;
                                <label><input type="checkbox" class="i-checks agenda-select-check" data-id="{{ client.id }}"> {{ client.nom }}</label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}