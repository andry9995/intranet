{% if margin is not defined %}
    {% set margin = 15 %}
{% endif %}

{% if datas|length > 0 %}
	<div class="row bande white-bg" style="margin-bottom: {{ margin }}px!important; margin-top: 5px!important;">
	    <div class="col-lg-12">
	        <table class="table" style="margin-bottom: 1px!important;" id="js_param_separation_selected">
	            <thead>
	            <tr>
	                <th>Pr√©nom</th>
	                {#<th>Login</th>#}
	                <th>Poste</th>
	                <th>A controler</th>
	            </tr>
	            </thead>
	            <tbody class="js_param_separation_body">
	            {% for d in datas %}
		            <tr>
		                {# <td class="hidden js_id_image">{{ d.id|boost }}</td> #}
		                <td>{{ d.operateur.prenom }}</td>
		                {#<td>{{ d.operateur.login }}</td>#}
		                <td>{{ d.organisation.nom }}</td>
		                <td class="controle_btn_a_controler" style="text-align: center;"><input type="checkbox" name="select_a_controler" {{ (d.AControler) ? 'checked = "checked"' : '' }}  class="input_chk_sep" data-id="{{d.id}}"></td>
		            </tr>
	            {% endfor %}
	            </tbody>
	        </table>
	    </div>
	</div>

	<div class="form-group text-right">
	    <span class="btn btn-sm btn-warning js_close_modal"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Fermer</span>
	    <span class="btn btn-sm btn-primary btn_save_a_controler"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;Enregistrer</span>
	</div>
{% endif %}