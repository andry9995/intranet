<form class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-2 control-label" for="dossier">Dossier</label>
        <div class="col-lg-10" style="position:relative;">
            <select class="form-control" id="dossier">
                {% if dossiers|length > 1 %}
                    {% if tous == 1 %}
                        <option value="0" selected="selected">Tous</option>
                    {% else %}
                        <option value="0" selected="selected">&nbsp;</option>
                    {% endif %}
                {% endif %}
                {% for dossier in dossiers %}
                    <option value="{{ dossier.id }}">{{ (dossier.nom != '') ? dossier.nom : ' ' }}</option>
                {% endfor %}
            </select>
            <span id="js_cloture" style="position:absolute;bottom: -10px;right: 0;opacity:0.9;" class="label label-warning"></span>
        </div>
    </div>
</form>
