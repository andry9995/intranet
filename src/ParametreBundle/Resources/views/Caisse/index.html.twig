{% extends '@App/index/base-menu-intranet.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts filter='?jsqueeze'
    '@ParametreBundle/Resources/public/js/caisse.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block content %}

    <div class="white-bg" style="padding: 20px 10px 10px;position: relative; overflow-y: auto;" id="liste-container">
        <h3>Parametrage pour la saisie des caisses</h3>
        <hr>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="client" class="col-md-2 control-label">Client</label>
                            <div class="col-md-10">
                                <select id="client" data-placeholder="Séléctionner un client"
                                        class="form-control chosen-select-client">
                                    <option value="-1"></option>
                                    {% for client in clients %}
                                        <option value="{{ client.id }}">{{ client.nom }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="hidden">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="site" class="col-md-2 control-label">Site</label>
                            <div class="col-md-10">
                                <select id="site" data-placeholder="Séléctionner un site"
                                        class="form-control chosen-select-site">
                                    <option value=""></option>
                                    {#Liste site#}
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-md-4">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="dossier" class="col-md-2 control-label">Dossier</label>
                            <div class="col-md-10">
                                <select id="dossier" data-placeholder="Séléctionner un dossier"
                                        class="form-control chosen-select-dossier">
                                    <option value=""></option>
                                    {#Liste dossier#}
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-md-1">
                    <button id="btn-show-pcc" class="btn btn-sm btn-primary btn-block">Go</button>
                </div>
                <div class="col-md-1" style="padding-top: 5px;">
                    <div id="loader" ></div>
                </div>

            </div>
        </div>

        <div style="margin: 10px;padding: 10px;">

            <div class="row">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-vente-comptoir">Vente Comptoir</a></li>
                        <li class=""><a data-toggle="tab" href="#tab-caisse">Caisse</a></li>
                    </ul>
                </div>

                <div class="tab-content">
                    <div id="tab-vente-comptoir" class="tab-pane active">
                        <div class="panel-body">

                            <div class="row">
                                <div  class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Contre partie vente</label>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <select id="pcc-contrepartie" class="form-control">
                                                    <option value="-1"></option>
                                                </select>
                                                <span class="input-group-btn">
                                                    <button id="btn-save-contre-partie" type="button" class="btn btn-primary btn-save-contre-partie">Valider</button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div style="margin-top:20px;">
                                    <table id="table-type-list">
                                    </table>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div style="margin-top:20px;">
                                    <table id="table-pcc-list">
                                    </table>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div style="margin-top:20px;">
                                    <table id="table-tva-list">
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="tab-caisse" class="tab-pane">
                        <div class="panel-body">

                            <div class="row">
                                <div  class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Contre partie caisse</label>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <select id="pcc-contrepartie-caisse" class="form-control">
                                                    <option value="-1"></option>
                                                </select>
                                                <span class="input-group-btn">
                                                    <button id="btn-save-contre-partie-caisse" type="button" class="btn btn-primary btn-save-contre-partie">Valider</button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div style="margin-top:20px;">
                                        <table id="table-resultat-list">
                                        </table>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div style="margin-top:20px;">
                                        <table id="table-tva-caisse-list">
                                        </table>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}