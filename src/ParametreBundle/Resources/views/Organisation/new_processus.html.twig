
{% if type == 0 %}
    <form role="form">
        <input type="hidden" value="0" id="typeId">

        <div class="form-group">
            <label for="rang-processus">N°</label>
            <input type="text" class="form-control" id="rang-processus" maxlength="2" value="{{ rang }}" >
        </div>
        <div class="form-group">
            <label for="nom-processus">Nom</label>
            <input type="text" class="form-control" id="nom-processus" maxlength="250">
        </div>

        <button type="submit" class="btn btn-primary" id="btn-valide-new-processus">Valider</button>
    </form>
{% endif %}
{% if type == 1 %}
    <form role="form">
        <input type="hidden" value="1" id="typeId">
        <div class="form-group">
            <label for="processus">Processus</label>
            <select id="processus">
                {% for processus in Processus %}
                    {% if processus.id == ProcessusId %}
                        <option value="{{ processus.id }}" selected>{{ processus.nom }}</option>
                    {% else %}
                        <option value="{{ processus.id }}">{{ processus.nom }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="rang-process">N°</label>
            <input type="text" class="form-control" id="rang-process" maxlength="2" value="{{ rang }}">
        </div>
        <div class="form-group">
            <label for="nom-process">Nom</label>
            <input type="text" class="form-control" id="nom-process" maxlength="250">
        </div>

        <div class="form-group">
            <label for="unite-edit-process">Unité d'oeuvre</label>
            <select id="unite-edit-process">
                <option value="0" selected></option>
                {% for unite in UniteOeuvres %}
                    <option value="{{ unite.id }}">{{ unite.libelle }}</option>

                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="temps-edit-process">Temps traitements</label>
            <input type="text" class="form-control" id="temps-edit-process" maxlength="10" value="0">
        </div>
        <div class="form-group">
            <label for="ant-edit-process">Process antérieure</label>
            <select id="ant-edit-process">
                <option value="0" selected></option>
                {% for process in Process %}
                    <option value="{{ process.id }}">{{ process.nom }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="post-edit-process">Process postérieure</label>
            <select id="post-edit-process">
                <option value="0" selected></option>
                {% for process in Process %}
                    <option value="{{ process.id }}">{{ process.nom }}</option>

                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="temps-edit-process">Temps traitements</label>
            <textarea id="description" name="description"
                      rows="4" cols="75">
            </textarea>
        </div>

        <button type="submit" class="btn btn-primary" id="btn-valide-new-process">Valider</button>
    </form>
{% endif %}

