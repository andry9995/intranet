                                                                            <div class="row">
                                                                                <div class="col-sm-4">
                                                                                    <i class="fa fa-plus btn-expand-detail id-parent-{{ key }}" id="btn-expand-detail-{{ valueDet.id }}" data-id={{ valueDet.id }} data-parent="{{ key }}" data-expand="0"></i>&nbsp;
                                                                                    <strong> [{{ codeParent ~ codeFils }}] {{ valueDet.nom }}</strong>
                                                                                </div>
