                                                                                              data-id="{{ valueDet.id }}"
                                                                                              data-nom="{{ valueDet.nom }}"
                                                                                              data-rang="{{ valueDet.rang }}"
                                                                                              data-processus="{{ key }}">
                                                                                        <i class="fa fa-edit"></i>
                                                                                    </span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="row expand-detail detail-de-{{ key }} hidden" id="expand-detail-{{ valueDet.id }}">
                                                                                <div class="col-sm-4">
