    <script src="{{ asset('bundles/parametre/js/picdatalogin.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() }} PERSONNELS
{% endblock %}

{% block content %}
    <div class="ibox ">
        <div class="ibox-content" id="id_container"></div>
    </div>
{% endblock %}

