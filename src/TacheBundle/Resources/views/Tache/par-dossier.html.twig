{# src/ParametreBundle/Resources/views/Tache/Tache/par-client.html.twig #}

{% extends '@App/index/base-menu-intranet.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?jsqueeze'
        '@TacheBundle/Resources/public/js/tache-functions.js'
        '@TacheBundle/Resources/public/js/tache-par-dossier.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='scssphp' filter='cssrewrite'
        '@TacheBundle/Resources/public/css/tache.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}
{% block title %}
    {{ parent() }} TACHES PAR DOSSIER
{% endblock %}

{% block content %}
    <div class="white-bg padding-sm">
        <h4>Liste des tâches par dossier</h4>
    </div>
    <div class="row white-bg padding-sm margin-xs">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="client" class="col-md-2 control-label">Client</label>
                                <div class="col-md-10">
                                    <select id="client" data-placeholder="Séléctionner un client" class="form-control chosen-select-client">
                                        <option value=""></option>
                                        {% for client in clients %}
                                            <option value="{{ client.id }}">{{ client.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="hidden">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="site" class="col-md-2 control-label">Site</label>
                                <div class="col-md-10">
                                    <select id="site" data-placeholder="Séléctionner un site" class="form-control chosen-select-site">
                                        <option value=""></option>
                                        {#Liste site#}
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="dossier" class="col-md-2 control-label">Dossier</label>
                                <div class="col-md-10">
                                    <select id="dossier" data-placeholder="Séléctionner un dossier" class="form-control chosen-select-dossier">
                                        <option value=""></option>
                                        {#Liste dossier#}
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-1">
                        <button id="btn-tache-dossier" class="btn btn-sm btn-primary btn-block">Go</button>
                    </div>
                    <div class="col-md-1">
                        <div class="dropdown">
                            <button class="btn btn-default btn-outline dropdown-toggle btn-block" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <i class="fa fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
                                <li><a href="#" id="btn-add-tache">Ajouter une Tâche</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#" id="btn-import-tache-client">Importer Tâches Client</a></li>
                            </ul>
                        </div>
                    </div>
                    <div id="loader" class="col-md-1" style="padding-top: 5px;"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding-top: 15px;">
                <table id="js_tache_liste"></table>
                <div id="pager_liste_tache"></div>
            </div>
        </div>
    </div>

    {% include '@Tache/Tache/modal-tache.html.twig' %}
{% endblock %}