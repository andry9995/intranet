{# src/ParametreBundle/Resources/views/Tache/Tache/par-client.html.twig #}

{% extends '@App/index/base-menu-intranet.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?jsqueeze'
        '@TacheBundle/Resources/public/js/tache-par-client.js'
        '@TacheBundle/Resources/public/js/tache-functions.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='scssphp' filter='cssrewrite'
    '@TacheBundle/Resources/public/css/tache.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block title %}
    {{ parent() }} TACHES PAR CLIENT
{% endblock %}

{% block content %}
    <div class="white-bg padding-sm">
        <h4>Liste des tâches par client</h4>
    </div>
    <div class="row white-bg padding-sm margin-xs">
        <div class="col-sm-8">
            <form class="form-inline">
                <div class="form-group">
                    <label for="client">Client</label>
                    <select id="client" data-placeholder="Séléctionner un client" class="form-control chosen-select-client" style="min-width: 300px;">
                        <option value=""></option>
                        {% for client in clients %}
                            <option value="{{ client.id }}">{{ client.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" id="btn-show-tache-client">Go</button>
                </div>
            </form>
        </div>
        <div class="col-sm-4">
            <button id="btn-add-tache" class="btn btn-primary btn-sm pull-right">
                <i class="fa fa-plus-circle"></i>
                Ajouter une tâche
            </button>
        </div>
    </div>
    <div class="row" style="margin-right: 1px;">
        <div class="col-sm-12">
            <table id="js_tache_liste"></table>
            <div id="pager_liste_tache"></div>
        </div>
    </div>

    {% include '@Tache/Tache/modal-tache.html.twig' %}
{% endblock %}