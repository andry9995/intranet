                <div class="form-group">
                    <label class="col-md-2 control-label">
                        <span>Exercice</span>
                    </label>
                    <div class="col-md-12">
                        <select class="form-control" id="exercice">
                                <option value=""></option>
                            {% for exercice in exercices %}
                                <option value="{{ exercice }}">{{ exercice }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-2">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span>Periode</span>
                    </label>
                    <div class="col-md-10">
                        <select class="form-control" name="filtre_fourchette" id="js_filtre_periode">
                            <option value=""></option>
                            <option value="1">Aujourd'hui</option>
                            <option value="2">Depuis une semaine</option>
                            <option value="3">Depuis un mois</option>
                            <option value="4">Toute l'exercice</option>
                            <option value="5">Fourchette</option>
                        </select>
                    </div>
                </div>
            </form>
