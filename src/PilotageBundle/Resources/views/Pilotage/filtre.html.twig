<div class="col-md-12">
    
    
    <div class="row">
        <div class="col-md-2">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="client" class="col-md-3 control-label">Client</label>
                    <div class="col-md-12">
                        <select id="client" data-placeholder="Séléctionner un client" class="form-control chosen-select-client">
                            <option value=""></option>
                            <option value="0">Tous</option>
                            {% for client in clients %}
                            <option value="{{ client.id }}">{{ client.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <div class="hidden">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="site" class="col-md-2 control-label">Site</label>
                    <div class="col-md-10">
                        <select id="site" data-placeholder="Séléctionner un site" class="form-control chosen-select-site">
                            <option value=""></option>
                            {#Liste site#}
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="dossier" class="col-md-2 control-label">Dossier</label>
                    <div class="col-md-12">
                        <select id="dossier" data-placeholder="Séléctionner un dossier" class="form-control chosen-select-dossier">
                            <option value=""></option>
                            {# Liste dossier #}
                        </select>
                    </div>
                </div>
            </form>
        </div>
