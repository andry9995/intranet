<div class="col-lg-12">
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label" for="rec-categorie">Catégorie</label>
            <select class="form-control" id="rec-categorie">
                {% for categorie in recCategories %}
                    <option value="{{ categorie.id }}">{{ categorie.libelleNew }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-2">
            <label class="control-label" for="rec-souscategorie">Sous catégorie</label>
            <select class="form-control" id="rec-souscategorie">
                <option value="-1"></option>
                {% for souscategorie in recSouscategories %}
                    <option value="{{ souscategorie.id }}">{{ souscategorie.libelleNew }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-2">
            <label class="control-label" for="rec-soussouscategorie">Sous Sous catégorie</label>
            <select class="form-control" id="rec-soussouscategorie">

            </select>
        </div>
        <div class="col-md-1">
            <button id="btn-go-recategoriser" class="btn btn-sm btn-primary btn-block" ><i class="fa fa-check"></i> Go</button>
        </div>
    </div>
</div>