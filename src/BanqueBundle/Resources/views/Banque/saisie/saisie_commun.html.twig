<div class="col-lg-12 mar-top">
    <div class="form-group">
        <label class="col-md-1 control-label">IBAN</label>
        {#<div class="col-md-5">#}
            {#<input type="text" class="form-control" id="js_iban_bq" value="" >#}
        {#</div>#}


        <div class="col-md-5">
            <div class="input-group">
                <select id="ibans" class="form-control">

                </select>
                <span class="input-group-btn">
                    <span class="btn btn-primary iban" id="btn-add-iban"><i class="fa fa-plus"></i></span>
                </span>
            </div>

            <div class="input-group hidden">
                <input type="text" id="newiban" class="form-control">
                <span class="input-group-btn">
                    <span class="btn btn-default iban" id="btn-undo-iban"><i class="fa fa-undo"></i></span>
                </span>
                <span class="input-group-btn">
                    <span class="btn btn-primary" id="btn-save-iban"><i class="fa fa-save"></i></span>
                </span>
            </div>
        </div>



        <label class="col-md-1 control-label">Banque</label>
        <div class="col-md-5">
            <select id="banques" class="form-control" data-placeholder="Séléctionner une banque" >
                <option value="-1"></option>
                {% for banque in banque2s %}
                    <option value="{{ banque.id }}">{{ banque.codebanque }} - {{ banque.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label">N° Compte</label>
        <div class="col-md-5">
            <div class="input-group">
                <select id="banquecomptes" class="form-control">

                </select>
                <span class="input-group-btn">
                    <span class="btn btn-primary banque-compte" id="btn-add-banquecompte"><i class="fa fa-plus"></i></span>
                </span>
            </div>

            <div class="input-group hidden">
                <input type="text" id="newbanquecompte" class="form-control">
                <span class="input-group-btn">
                    <span class="btn btn-default banque-compte" id="btn-undo-banquecompte"><i class="fa fa-undo"></i></span>
                </span>
                <span class="input-group-btn">
                    <span class="btn btn-primary banque-compte" id="btn-save-banquecompte"><i class="fa fa-save"></i></span>
                </span>
            </div>
        </div>
    </div>

</div>

