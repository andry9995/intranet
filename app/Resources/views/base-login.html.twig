        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
    {#fait manuel#}
    <script src="{{ asset('js/fonctions.js') }}"></script>
{% endblock %}
